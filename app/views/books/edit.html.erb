<h1>Edit Book</h1>

<%= form_with(model: @book, url: book_path(@book), method: :patch) do |f| %>
  <div class="form-fields">
    <div>Title</div>
    <%= f.text_field :title %>
  </div>

  <div class="form-fields">
    <div>Body</div>
    <%= f.text_area :body %>
  </div>
  
  <div class="form-actions">
    <%= f.submit 'Update Book' %>
  </div>
<% end %>

<%= link_to "Show", book_path(@book) %> |
<%= link_to "Back", books_path %>